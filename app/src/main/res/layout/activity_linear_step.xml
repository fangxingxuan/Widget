<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_common_toolbar"/>

    <com.fxx.library.widget.common.LinearStepView
        android:id="@+id/step_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:lsvGapFixed="false"
        app:lsvGapSize="10dp"
        app:lsvStepCurrentPos="4"
        app:lsvStepLineColor="#00e080"
        app:lsvStepMax="6"
        app:lsvSteppedLineColor="#e2001e"/>

    <com.fxx.library.widget.common.LinearStepView
        android:id="@+id/step_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:lsvGapFixed="false"
        app:lsvGapSize="10dp"
        app:lsvStepCurrentPos="4"
        app:lsvStepMax="6"
        app:lsvSteppedLineColor="#00e080"/>

    <com.fxx.library.widget.common.LinearStepView
        android:id="@+id/step_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:lsvGapFixed="false"
        app:lsvGapSize="10dp"
        app:lsvStepCurrentPos="4"
        app:lsvStepLineColor="#00e080"
        app:lsvStepMax="6"
        app:lsvSteppedLineColor="#e2001e"/>

    <com.fxx.library.widget.common.LinearStepView
        android:id="@+id/step_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:lsvGapFixed="false"
        app:lsvGapSize="10dp"
        app:lsvStepCurrentPos="4"
        app:lsvStepLineColor="#00e080"
        app:lsvStepMax="5"
        app:lsvSteppedDrawable="@drawable/fw_ic_stepped"
        app:lsvSteppedLineColor="#e2001e"
        app:lsvSteppingDrawable="@drawable/fw_ic_stepping"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="重置"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="刷新"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>